{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:tunnel": "concurrently \"bun run dev\" \"node scripts/start-ngrok-cli.js\" \"node scripts/setup-ngrok-env.js\"",
    "build": "node build.js",
    "start": "node dist/index.cjs",
    "start:bun": "bun src/index.ts",
    "lint": "eslint \"**/*.{js,ts}\" && prettier -c \"**/*.{js,ts,json}\"",
    "format": "eslint \"**/*.{js,ts}\" --fix && prettier \"**/*.{js,ts,json}\" --write",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.4",
    "@supabase/supabase-js": "^2.89.0",
    "hono": "^4.9.10",
    "resend": "^6.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.25.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "ngrok": "^5.0.0-beta.2",
    "prettier": "^3.6.2"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.25.10"
  }
}
